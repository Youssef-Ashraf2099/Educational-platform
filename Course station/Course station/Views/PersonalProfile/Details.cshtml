@model Course_station.Models.PersonalProfile
@{
    ViewData["Title"] = "Personal Profile Details";
}

<h1 class="text-center">Personal Profile Details</h1>

<div class="profile-container card shadow-sm p-4 mb-5 bg-white rounded">
    <div class="profile-header d-flex align-items-center mb-4">
        <div class="profile-info ml-3">
            <h2 class="text-primary">Profile ID: @Model.ProfileId</h2>
            <h3 class="text-primary">Learner: @Model.Learner.FirstName @Model.Learner.LastName</h3>
            <p class="text-muted">Learner ID: @Model.LearnerId</p>
        </div>
    </div>

    <div class="profile-details">
        <h4 class="text-secondary">Profile Information</h4>
        <dl class="row">
            <dt class="col-sm-3">Preferred Content Type</dt>
            <dd class="col-sm-9">@Model.PreferedContentType</dd>

            <dt class="col-sm-3">Emotional State</dt>
            <dd class="col-sm-9">@Model.EmotionalState</dd>

            <dt class="col-sm-3">Personality Type</dt>
            <dd class="col-sm-9">@Model.PersonalityType</dd>
        </dl>
    </div>

    <div class="profile-actions mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ProfileId" class="btn btn-primary mr-2">Edit Profile</a>
        <form asp-action="Delete" asp-route-id="@Model.ProfileId" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete Profile</button>
        </form>
    </div>
</div>

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-info {
        flex-grow: 1;
    }

    .profile-details {
        margin-bottom: 20px;
    }

    .profile-actions {
        margin-bottom: 20px;
    }

    .text-primary {
        color: #007bff !important;
    }

    .text-secondary {
        color: #6c757d !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>
