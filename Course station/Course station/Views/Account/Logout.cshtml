@page

@model Course_station.view.Account.LogoutModel
@{
    // Log out the user and redirect to the Home Index page
    var learnerLogoutUrl = Url.Action("Logout", "Learners");
    var instructorLogoutUrl = Url.Action("Logout", "Instructors");

    if (User.IsInRole("Learner"))
    {
        Response.Redirect(learnerLogoutUrl);
    }
    else if (User.IsInRole("Instructor"))
    {
        Response.Redirect(instructorLogoutUrl);
    }
    else
    {
        var redirectUrl = Url.Action("Index", "Home") ?? "/";
        Response.Redirect(redirectUrl);
    }
}
