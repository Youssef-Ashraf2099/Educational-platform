@{
    ViewData["Title"] = "Course Station";
}

<header class="text-center my-4">
    <img src="~/images/logo3.png" alt="Course Station Logo" class="logo" />
</header>

<div class="headercontainer">
    <div class="header d-flex align-items-center justify-content-center">
        <div id="typing-effect"></div>
        <script src="~/js/typing-effect.js"></script>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-auto">
            <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "Learners")" role="button" style="width: 200px;">Join Us</a>
        </div>
        <div class="col-auto">
            <a class="btn btn-success btn-lg" href="@Url.Action("Create", "Instructor")" role="button" style="width: 200px;">Make an Impact</a>
        </div>
    </div>
</div>

<!-- About Us -->
<h1 id="AboutUs">About Us</h1>
<p class="Aboutus">
    Welcome to Course Station, your ultimate destination for online learning. Our mission is to provide high-quality education that is accessible to everyone, everywhere.
</p>
<hr />

<!-- Popular Courses -->
<h1 id="Course">Popular Courses</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100">
            <img src="~/images/bw_dsa.png.webp" class="card-img-top" alt="Data Structures and Algorithms">
            <div class="card-body">
                <h5 class="card-title">Data Structures and Algorithms</h5>
                <p class="card-text">Learn the fundamentals of data handling, search techniques, and algorithmic optimization.</p>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary">Last updated 3 mins ago</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/prog1.jpg" class="card-img-top" alt="Programming Essentials">
            <div class="card-body">
                <h5 class="card-title">Programming Fundamentals</h5>
                <p class="card-text">Build a strong foundation in programming concepts and create real-world applications.</p>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary">Last updated 3 mins ago</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/Data.jpg" class="card-img-top" alt="Cloud Computing">
            <div class="card-body">
                <h5 class="card-title">Cloud Computing</h5>
                <p class="card-text">Explore cloud services like AWS, Azure, and Google Cloud to manage cloud-based projects.</p>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary">Last updated 3 mins ago</small>
            </div>
        </div>
    </div>
</div>
<hr />

<!-- Services -->
<h1 id="Services">Services</h1>
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="flip-box">
            <div class="flip-box-inner">
                <div class="flip-box-front">
                    <h2>Learner</h2>
                </div>
                <div class="flip-box-back">
                    <p class="card-text">Access a wide range of courses and learn at your own pace with flexible schedules and interactive tools.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="flip-box">
            <div class="flip-box-inner">
                <div class="flip-box-front">
                    <h2>Instructor</h2>
                </div>
                <div class="flip-box-back">
                    <p class="card-text">Join our team of expert instructors and share your knowledge with learners worldwide.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="flip-box">
            <div class="flip-box-inner">
                <div class="flip-box-front">
                    <h2>Course</h2>
                </div>
                <div class="flip-box-back">
                    <p class="card-text">Discover our comprehensive course offerings, tailored to meet the needs of learners at all levels.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

<!-- Plans -->
<h1 id="Plans">Our Plans</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h2 class="card-title text-center">Free</h2>
                <hr />
                <p class="starting">Starting From</p>
                <p class="price">$0</p>
                <button class="btn btn-primary">Get Started</button>
                <p class="card-text">Perfect for beginners who want to get started with online learning.</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 card-premium">
            <div class="card-body">
                <h2 class="card-title text-center">Premium</h2>
                <hr />
                <p class="starting">Starting From</p>
                <p class="price">$100</p>
                <button class="btn btn-close-white">Get Started</button>
                <p class="card-text">Includes access to a wider range of courses, live sessions, and additional resources.</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h2 class="card-title text-center">Standard</h2>
                <hr />
                <p class="starting">Starting From</p>
                <p class="price">$50</p>
                <button class="btn btn-primary">Get Started</button>
                <p class="card-text">A balance between the Basic and Premium plans, perfect for those who want more than the basics.</p>
            </div>
        </div>
    </div>
</div>
<hr />

<!-- Contact Us -->
<h1 id="Contact">Contact Us</h1>
<div class="contact-container">
    <form asp-controller="Home" asp-action="SubmitForm">
        <label for="fname">First Name</label>
        <input type="text" id="fname" name="firstname" placeholder="Your name..">
        <label for="lname">Last Name</label>
        <input type="text" id="lname" name="lastname" placeholder="Your last name..">
        <label for="Email">Email</label>
        <input type="text" id="Email" placeholder="Enter your Email..">
        <label for="country">Country</label>
        <select id="country" name="country">
            <option value="australia">Australia</option>
            <option value="canada">Canada</option>
            <option value="usa">USA</option>
            <option value="egypt">Egypt</option>
            <option value="germany">Germany</option>
        </select>
        <label for="subject">Subject</label>
        <textarea id="subject" name="subject" placeholder="Write something.." style="height:100px"></textarea>
        <input type="submit" value="Submit">
    </form>
</div>