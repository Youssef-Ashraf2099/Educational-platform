@model Course_station.Models.TakenAssessment

@{
    ViewData["Title"] = "Take Assessment";
}

<h2>@ViewData["Title"]</h2>

@if (Model?.Assessment == null)
{
    <p>Error: Unable to load assessment details. Please try again later.</p>
}
else
{
    <h3>@Model.Assessment.Title</h3>
    <p>@Model.Assessment.Description</p>
    <p>Total Marks: @Model.Assessment.TotalMarks</p>
    <p>Passing Marks: @Model.Assessment.PassingMarks</p>

    <form asp-action="Take" method="post">
        <input type="hidden" asp-for="AssessmentId" />
        <input type="hidden" asp-for="LearnerId" />

        <div class="form-group">
            <label for="ScoredPoint">Enter Your Score</label>
            <input type="number" asp-for="ScoredPoint" class="form-control" />
            <span asp-validation-for="ScoredPoint" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
