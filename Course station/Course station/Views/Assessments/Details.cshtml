@model Course_station.Models.Assessment

@{
    ViewData["Title"] = "Assessment Details";
}

<h2>Assessment Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Total Marks</dt>
        <dd class="col-sm-10">@Model.TotalMarks</dd>
        <dt class="col-sm-2">Passing Marks</dt>
        <dd class="col-sm-10">@Model.PassingMarks</dd>
    </dl>
</div>

<h3>Score Analytics</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Average Score</dt>
        <dd class="col-sm-10">@ViewBag.AverageScore</dd>
        <dt class="col-sm-2">Highest Score</dt>
        <dd class="col-sm-10">@ViewBag.HighestScore</dd>
        <dt class="col-sm-2">Lowest Score</dt>
        <dd class="col-sm-10">@ViewBag.LowestScore</dd>
    </dl>
</div>

<h3>Taken Assessments</h3>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Learner</th>
                <th>Score</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var takenAssessment in Model.TakenAssessments)
            {
                <tr>
                    <td>@takenAssessment.Learner.FirstName @takenAssessment.Learner.LastName</td>
                    <td>@takenAssessment.ScoredPoint</td>
                </tr>                  
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
