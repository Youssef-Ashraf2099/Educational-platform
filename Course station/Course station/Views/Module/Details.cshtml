@model Course_station.Models.Module

@{
    ViewData["Title"] = "Module Details";
}

<h2>Module Details</h2>

<div>
    <h4>Module</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Difficulty Level
        </dt>
        <dd class="col-sm-10">
            @Model.DifficultyLevel
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course.Title
        </dd>
        <dt class="col-sm-2">
            Content URL
        </dt>
        <dd class="col-sm-10">
            @Model.ContentUrl
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ModuleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
