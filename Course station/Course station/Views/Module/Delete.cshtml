@model Course_station.Models.Module

@{
    ViewData["Title"] = "Delete Module";
}

<h2>Delete Module</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Module</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Difficulty Level
        </dt>
        <dd class="col-sm-10">
            @Model.DifficultyLevel
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course.Title
        </dd>
        <dt class="col-sm-2">
            Content URL
        </dt>
        <dd class="col-sm-10">
            @Model.ContentUrl
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ModuleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
