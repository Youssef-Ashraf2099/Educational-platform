@{
    ViewData["Title"] = "Send Notification";
}

<h2 class="text-center">Send Notification</h2>

<div class="d-flex justify-content-center">
    <form asp-action="SendNotification" method="post" class="w-50 shadow p-3 mb-5 bg-white rounded-lg">
        <div class="form-group">
            <label for="courseSelect" class="control-label">Course</label>
            <select class="form-control" id="courseSelect" name="courseId" asp-items="ViewBag.Courses"></select>
        </div>
        <div class="form-group">
            <label for="message" class="control-label">Message</label>
            <textarea class="form-control" id="message" name="message"></textarea>
        </div>
        <div class="form-group">
            <label for="urgency" class="control-label">Urgency</label>
            <select class="form-control" id="urgency" name="urgency">
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

