@model Course_station.Models.Instructor

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1>Delete Confirmation</h1>

<div>
    <h4>Are you sure you want to delete this instructor?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstructorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courses)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Courses != null && Model.Courses.Any())
            {
                <ul>
                    @foreach (var course in Model.Courses)
                    {
                        <li>@course.Title</li>
                    }
                </ul>
            }
            else
            {
                <p>No courses assigned</p>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="InstructorId" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
