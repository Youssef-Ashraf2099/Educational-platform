@model Course_station.Models.Instructor

@{
    ViewData["Title"] = "Instructor Profile";
}

<link rel="stylesheet" href="~/css/Iprofile.css" />

<div class="profile-container">
    <div class="profile-header">
        <img src="~/images/@($"{Model.InstructorId}_profile.jpg")" alt="Profile Picture" class="profile-picture">
        <h2>@Model.InstructorName</h2>
        <h4>ID: @Model.InstructorId</h4>
        <p><i class="fas fa-envelope"></i> <a href="mailto:@Model.Email">@Model.Email</a></p>
        <p><i class="fas fa-graduation-cap"></i> Latest Qualification: @Model.LatestQualification</p>
        <p><i class="fas fa-briefcase"></i> Expertise Area: @Model.ExpertiseArea</p>
        <form id="uploadPhotoForm" asp-action="UploadProfilePicture" asp-controller="Instructor" method="post" enctype="multipart/form-data">
            <input type="hidden" name="instructorId" value="@Model.InstructorId" />
            <input type="file" id="profilePictureInput" name="profilePicture" class="d-none" />
            <button type="button" class="btn-change-picture" onclick="document.getElementById('profilePictureInput').click();">Change Profile Picture</button>
        </form>
    </div>

    <div class="profile-content">
        <section class="courses-section">
            <h3>Courses</h3>
            @foreach (var course in Model.Courses)
            {
                <details>
                    <summary>@course.Title</summary>
                    <p>@course.Description</p>
                </details>
            }
        </section>

        <section class="feedback-section">
            <h3>Emotional Feedback Reviews</h3>
            @foreach (var review in Model.EmotionalfeedbackReviews)
            {
                <div class="feedback-card">
                    <h5>Feedback ID: @review.FeedbackId</h5>
                    <p>@review.Review</p>
                </div>
            }
        </section>

        <section class="path-reviews-section">
            <h3>Path Reviews</h3>
            @foreach (var review in Model.Pathreviews)
            {
                <div class="path-review">
                    <strong>Path ID:</strong> @review.PathId<br />
                    <strong>Feedback:</strong> @review.Feedback
                </div>
            }
        </section>
    </div>

    <div class="actions">
        <a href="/Instructor/Edit/@Model.InstructorId" class="btn btn-edit">Edit Profile</a>
        @* <form method="post" action="/Instructor/Delete/@Model.InstructorId" onsubmit="return confirm('Are you sure you want to delete this instructor?');" class="inline-form"> *@
        @*     <input type="hidden" name="InstructorId" value="@Model.InstructorId" /> *@
        @*     <button type="submit" class="btn btn-delete">Delete Profile</button> *@
        @* </form> *@
        <a href="/Instructor/Home" class="btn btn-home">Go to Home</a>
    </div>

    <div class="danger-zone">
        <h2>Danger Zone</h2>
        <p>Once you delete your profile, there is no going back. Please be certain.</p>
        <form asp-action="Delete" asp-route-id="@Model.InstructorId" method="post" onsubmit="return confirm('Are you sure you want to delete your profile? This action cannot be undone.');">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete Profile
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('profilePictureInput').addEventListener('change', function () {
            document.getElementById('uploadPhotoForm').submit();
        });
    </script>
    <!-- Include Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
