@model Course_station.Models.Instructor

@{
    ViewData["Title"] = "Instructor Profile";
}

<style>
    .profile-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .profile-header h2 {
        margin: 10px 0;
        font-size: 24px;
        color: #343a40;
    }

    .profile-header h4 {
        margin: 5px 0;
        font-size: 18px;
        color: #6c757d;
    }

    .profile-header p {
        margin: 5px 0;
        color: #6c757d;
    }

    .btn-change-picture {
        margin-top: 10px;
        padding: 5px 10px;
        font-size: 14px;
        color: #007bff;
        background-color: transparent;
        border: 1px solid #007bff;
        border-radius: 5px;
        cursor: pointer;
    }

    .profile-content {
        margin-top: 20px;
    }

        .profile-content section {
            margin-bottom: 20px;
        }

        .profile-content h3 {
            font-size: 20px;
            color: #343a40;
            margin-bottom: 10px;
        }

    details {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
    }

    summary {
        font-weight: bold;
        cursor: pointer;
    }

    .feedback-card, .path-review {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
    }

    .actions {
        text-align: center;
        margin-top: 20px;
    }

        .actions .btn {
            margin: 5px;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
        }

    .danger-zone {
        text-align: center;
        margin-top: 40px;
        padding: 20px;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
    }

        .danger-zone h2 {
            color: #721c24;
        }

        .danger-zone p {
            color: #721c24;
        }

        .danger-zone .btn {
            color: #721c24;
            border-color: #721c24;
        }
</style>

<div class="profile-container">
    <div class="profile-header">
        <img src="~/images/@($"{Model.InstructorId}_profile.jpg")" alt="Profile Picture" class="profile-picture">
        <h2>@Model.InstructorName</h2>
        <h4>ID: @Model.InstructorId</h4>
        <p><i class="fas fa-envelope"></i> <a href="mailto:@Model.Email">@Model.Email</a></p>
        <p><i class="fas fa-graduation-cap"></i> Latest Qualification: @Model.LatestQualification</p>
        <p><i class="fas fa-briefcase"></i> Expertise Area: @Model.ExpertiseArea</p>
        <form id="uploadPhotoForm" asp-action="UploadProfilePicture" asp-controller="Instructor" method="post" enctype="multipart/form-data">
            <input type="hidden" name="instructorId" value="@Model.InstructorId" />
            <input type="file" id="profilePictureInput" name="profilePicture" class="d-none" />
            <button type="button" class="btn-change-picture" onclick="document.getElementById('profilePictureInput').click();">Change Profile Picture</button>
        </form>
    </div>

    <div class="profile-content">
        <section class="courses-section">
            <h3>Courses</h3>
            @foreach (var course in Model.Courses)
            {
                <details>
                    <summary>@course.Title</summary>
                    <p>@course.Description</p>
                </details>
            }
        </section>

        <section class="feedback-section">
            <h3>Emotional Feedback Reviews</h3>
            @foreach (var review in Model.EmotionalfeedbackReviews)
            {
                <div class="feedback-card">
                    <h5>Feedback ID: @review.FeedbackId</h5>
                    <p>@review.Review</p>
                </div>
            }
        </section>

        <section class="path-reviews-section">
            <h3>Path Reviews</h3>
            @foreach (var review in Model.Pathreviews)
            {
                <div class="path-review">
                    <strong>Path ID:</strong> @review.PathId<br />
                    <strong>Feedback:</strong> @review.Feedback
                </div>
            }
        </section>
    </div>

    <div class="actions">
        <a href="/Instructor/Edit/@Model.InstructorId" class="btn btn-warning">Edit Profile</a>
        <form method="post" action="/Instructor/Delete/@Model.InstructorId" onsubmit="return confirm('Are you sure you want to delete this instructor?');" class="d-inline-block">
            <input type="hidden" name="InstructorId" value="@Model.InstructorId" />

        </form>
        <a href="/Instructor/Home" class="btn btn-primary">Go to Home</a>
    </div>

    <div class="danger-zone">
        <h2>Danger Zone</h2>
        <p>Once you delete your profile, there is no going back. Please be certain.</p>
        <form asp-action="Delete" asp-route-id="@Model.InstructorId" method="post" onsubmit="return confirm('Are you sure you want to delete your profile? This action cannot be undone.');">
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-trash"></i> Delete Profile
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('profilePictureInput').addEventListener('change', function () {
            document.getElementById('uploadPhotoForm').submit();
        });
    </script>
    <!-- Include Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

}