@model Course_station.Models.Instructor

@{
    ViewData["Title"] = "Instructor Profile";
}

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Include Custom CSS -->
<link rel="stylesheet" href="~/css/custim.css">

<div class="container my-5">
    <div class="card shadow">
        <div class="card-body">
            <div class="text-center">
                <img src="~/images/@($"{Model.InstructorId}_profile.jpg")" alt="Profile Picture" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                <h2 class="mt-3">@Model.InstructorName</h2>
                <h5 class="text-muted">ID: @Model.InstructorId</h5>
                <p class="mt-3">
                    <i class="fas fa-envelope"></i> <a href="mailto:@Model.Email">@Model.Email</a><br>
                    <i class="fas fa-graduation-cap"></i> Latest Qualification: @Model.LatestQualification<br>
                    <i class="fas fa-briefcase"></i> Expertise Area: @Model.ExpertiseArea
                </p>
                <form id="uploadPhotoForm" asp-action="UploadProfilePicture" asp-controller="Instructor" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="instructorId" value="@Model.InstructorId" />
                    <input type="file" id="profilePictureInput" name="profilePicture" class="d-none" />
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('profilePictureInput').click();">Change Profile Picture</button>
                </form>
            </div>

            <hr>

            <div class="mt-4">
                <h3>Courses</h3>
                @foreach (var course in Model.Courses)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            @course.Title
                        </div>
                        <div class="card-body">
                            <p class="card-text">@course.Description</p>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-4">
                <h3>Emotional Feedback Reviews</h3>
                @foreach (var review in Model.EmotionalfeedbackReviews)
                {
                    <div class="alert alert-info">
                        <h5>Feedback ID: @review.FeedbackId</h5>
                        <p>@review.Review</p>
                    </div>
                }
            </div>

            <div class="mt-4">
                <h3>Path Reviews</h3>
                @foreach (var review in Model.Pathreviews)
                {
                    <div class="alert alert-secondary">
                        <strong>Path ID:</strong> @review.PathId<br />
                        <strong>Feedback:</strong> @review.Feedback
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="/Instructor/Edit/@Model.InstructorId" class="btn btn-warning mx-2 btn-custom">Edit Profile</a>
                <a href="/Instructor/Home" class="btn btn-primary mx-2 btn-custom">Go to Home</a>
            </div>

            <div class="card bg-danger text-white mt-5">
                <div class="card-body text-center">
                    <h2>Danger Zone</h2>
                    <p>Once you delete your profile, there is no going back. Please be certain.</p>
                    <form asp-action="Delete" asp-route-id="@Model.InstructorId" method="post" onsubmit="return confirm('Are you sure you want to delete your profile? This action cannot be undone.');">
                        <button type="submit" class="btn btn-outline-light btn-custom">
                            <i class="fas fa-trash"></i> Delete Profile
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('profilePictureInput').addEventListener('change', function () {
            document.getElementById('uploadPhotoForm').submit();
        });
    </script>
    <!-- Include Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <!-- Include Bootstrap JS (optional for interactive components) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
}
