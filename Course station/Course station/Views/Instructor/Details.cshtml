@model Course_station.Models.Instructor
@{
    ViewData["Title"] = "Instructor Details";
}

<h1 class="text-center">@Model.InstructorName's Profile</h1>

<div class="profile-container card shadow-sm p-4 mb-5 bg-white rounded">
    <div class="profile-header d-flex align-items-center mb-4">
        <div class="profile-info ml-3">
            <h2 class="text-primary">@Model.InstructorName</h2>
            <p class="text-muted">@Model.Email</p>
        </div>
    </div>

    <div class="profile-picture mb-4 text-center">
        <img src="~/images/@($"{Model.InstructorId}_profile.jpg")" alt="Profile Picture" class="img-thumbnail" style="max-width: 200px;">
    </div>

    <div class="profile-details">
        <h4 class="text-secondary">Instructor Information</h4>
        <dl class="row">
            <dt class="col-sm-3">Instructor ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.InstructorId)</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.InstructorName)</dd>

            <dt class="col-sm-3">Latest Qualification</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LatestQualification)</dd>

            <dt class="col-sm-3">Expertise Area</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpertiseArea)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>

    <div class="profile-actions mt-4">
        <a asp-action="Edit" asp-route-id="@Model.InstructorId" class="btn btn-primary">Edit Profile</a>
    </div>

    <div class="upload-picture mt-4">
        <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="profilePicture">Upload Profile Picture</label>
                <input type="file" class="form-control-file" id="profilePicture" name="profilePicture">
            </div>
            <input type="hidden" name="instructorId" value="@Model.InstructorId" />
            <button type="submit" class="btn btn-success">Upload</button>
        </form>
    </div>
</div>

<!-- Toolbox HTML -->
<div class="toolbox">
    <button class="toolbox-toggle">☰</button>
    <div class="toolbox-content">
        <h4>Toolbox</h4>
        <ul>
            <li><a href="#">Tool 1</a></li>
            <li><a href="#">Tool 2</a></li>
            <li><a href="#">Tool 3</a></li>
        </ul>
    </div>
</div>

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-info {
        flex-grow: 1;
    }

    .profile-details {
        margin-bottom: 20px;
    }

    .profile-actions {
        margin-bottom: 20px;
    }

    .text-primary {
        color: #007bff !important;
    }

    .text-secondary {
        color: #6c757d !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    /* Toolbox Styles */
    .toolbox {
        position: fixed;
        top: 50%;
        right: 0;
        transform: translateY(-50%);
        background-color: #343a40;
        color: white;
        border-radius: 8px 0 0 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: width 0.3s;
        width: 40px;
    }

    .toolbox-toggle {
        background-color: #343a40;
        border: none;
        color: white;
        padding: 10px;
        cursor: pointer;
        width: 100%;
    }

    .toolbox-content {
        display: none;
        padding: 10px;
    }

        .toolbox-content h4 {
            margin-top: 0;
        }

        .toolbox-content ul {
            list-style: none;
            padding: 0;
        }

            .toolbox-content ul li {
                margin: 10px 0;
            }

                .toolbox-content ul li a {
                    color: white;
                    text-decoration: none;
                }

                    .toolbox-content ul li a:hover {
                        text-decoration: underline;
                    }
</style>

<script>
    document.querySelector('.toolbox-toggle').addEventListener('click', function () {
        var toolbox = document.querySelector('.toolbox');
        var content = document.querySelector('.toolbox-content');
        if (toolbox.style.width === '200px') {
            toolbox.style.width = '40px';
            content.style.display = 'none';
        } else {
            toolbox.style.width = '200px';
            content.style.display = 'block';
        }
    });
</script>
