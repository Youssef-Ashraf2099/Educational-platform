@model Course_station.Controllers.InstructorLoginViewModel

@{
    ViewData["Title"] = "Instructor Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .center-form {
            display: flex;
            justify-content: center;
            align-items: center;
          
        }

            .center-form form {
                width: 100%;
                max-width: 400px;
                padding: 20px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                border-radius: 8px;
                background-color: #fff;
            }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>
    <h2 class="text-center">Instructor Login</h2>

    <div class="center-form">
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="InstructorId">Instructor ID</label>
                <input asp-for="InstructorId" class="form-control" />
                <span asp-validation-for="InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div>
        <a asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
</body>
</html>
