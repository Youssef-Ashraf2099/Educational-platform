@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Instructor Home";
    var instructorId = HttpContextAccessor.HttpContext?.Session.GetInt32("InstructorId");
    if (instructorId == null)
    {
        HttpContextAccessor.HttpContext?.Response.Redirect("/Instructor/LogIn");
        return;
    }
}

<div class="instructor-home-container">
    <h2>Instructor Home</h2>
    <p>Welcome to the Instructor home page!</p>

    <div class="actions">
        <h3>Actions</h3>
        <div class="btn-group-vertical">
            <a asp-controller="Instructor" asp-action="AddActivity" class="btn btn-primary">Add Activity</a>
            <a asp-controller="Instructor" asp-action="CreateCourse" class="btn btn-success">Create Course</a>
            <a asp-controller="Instructor" asp-action="CreateAssessment" class="btn btn-info">Create Assessment</a>
            <a asp-controller="Instructor" asp-action="SendNotification" class="btn btn-warning">Send Notification</a>
            <a asp-controller="Instructor" asp-action="ManageCourses" class="btn btn-secondary">Manage Courses</a>
            <a asp-controller="Quests" asp-action="Create" class="btn btn-dark">Create Quest</a>
            <a asp-controller="Instructor" asp-action="Details" asp-route-id="@instructorId" class="btn btn-light">View Profile</a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/instructor-home.css">
