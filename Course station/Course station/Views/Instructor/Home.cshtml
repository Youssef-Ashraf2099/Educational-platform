@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Instructor Home";
    var instructorId = HttpContextAccessor.HttpContext?.Session.GetInt32("InstructorId");
    if (instructorId == null)
    {
        HttpContextAccessor.HttpContext?.Response.Redirect("/Instructor/LogIn");
        return;
    }
}

<div class="container instructor-home-container ">
    <div class="text-center ">
        <h1 class="display-4">Welcome to Course Station</h1>
        <p class="lead">Impact and change the world with knowledge.</p>
    </div>

    <div id="motivationalCarousel" class="carousel slide " data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#motivationalCarousel" data-bs-slide-to="0" class="active" aria-current="true"></button>
            <button type="button" data-bs-target="#motivationalCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#motivationalCarousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/motivation1.jpg" class="d-block w-100" alt="Motivation 1">
            </div>
            <div class="carousel-item">
                <img src="~/images/motivation2.jpg" class="d-block w-100" alt="Motivation 2">
            </div>
            <div class="carousel-item">
                <img src="~/images/motivation3.jpg" class="d-block w-100" alt="Motivation 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#motivationalCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#motivationalCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="actions text-center">
        <h3 class="mb-4">What would you like to do today?</h3>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-header">Add Activity</div>
                    <div class="card-body text-primary">
                        <a asp-controller="Instructor" asp-action="AddActivity">Add Activity</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-success mb-3" style="max-width: 18rem;">
                    <div class="card-header">Create Course</div>
                    <div class="card-body text-success">
                        <a asp-controller="Instructor" asp-action="CreateCourse">Create Course</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-info mb-3" style="max-width: 18rem;">
                    <div class="card-header">Create Assessment</div>
                    <div class="card-body text-info">
                        <a asp-controller="Instructor" asp-action="CreateAssessment">Create Assessment</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-warning mb-3" style="max-width: 18rem;">
                    <div class="card-header">Send Notification</div>
                    <div class="card-body text-warning">
                        <a asp-controller="Instructor" asp-action="SendNotification">Send Notification</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-secondary mb-3" style="max-width: 18rem;">
                    <div class="card-header">Manage Courses</div>
                    <div class="card-body text-secondary">
                        <a asp-controller="Instructor" asp-action="ManageCourses">Manage Courses</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header">Create Quest</div>
                    <div class="card-body text-dark">
                        <a asp-controller="Quests" asp-action="Create">Create Quest</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="card border-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">View Profile</div>
                    <div class="card-body text-light">
                        <a asp-controller="Instructor" asp-action="Details" asp-route-id="@instructorId">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/instructor-home.css">
