@model IEnumerable<Course_station.Models.Course>

@{
    ViewData["Title"] = "Manage Courses";
}

<h2 class="page-title">Manage Courses</h2>

<div class="course-table-container">
    <table class="table table-striped table-hover">
        <thead class="table-header">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>
                        <a asp-controller="Instructor" asp-action="DeleteCourse" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="~/css/manageCourses.css" />
