@model Course_station.Models.Quest

@{
    ViewData["Title"] = "CreateQuest";
}

<h1>Create Quest</h1>

<form asp-action="CreateQuestWithDeadline" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DifficultyLevel" class="control-label"></label>
        <input asp-for="DifficultyLevel" class="form-control" />
        <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Criteria" class="control-label"></label>
        <input asp-for="Criteria" class="form-control" />
        <span asp-validation-for="Criteria" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Collaborative" class="control-label"></label>
        <input asp-for="Collaborative" class="form-control" />
        <span asp-validation-for="Collaborative" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SkillMastery" class="control-label"></label>
        <input asp-for="SkillMastery" class="form-control" />
        <span asp-validation-for="SkillMastery" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Deadline" class="control-label">Deadline</label>
        <input id="Deadline" name="Deadline" class="form-control" type="datetime-local" />
        <span id="DeadlineValidationMessage" class="text-danger">@ViewBag.DeadlineValidationMessage</span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
