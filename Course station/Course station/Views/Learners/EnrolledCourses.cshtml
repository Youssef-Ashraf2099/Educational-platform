@model IEnumerable<Course_station.Models.Course>
@{
    ViewData["Title"] = "Enrolled Courses";
}

<h1 class="text-center">Enrolled Courses</h1>

<div class="enrolled-courses-container card shadow-sm p-4 mb-5 bg-white rounded">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Difficulty Level</th>
                <th>Credit Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.DiffLevel</td>
                    <td>@course.CreditPoint</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .enrolled-courses-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }
</style>
