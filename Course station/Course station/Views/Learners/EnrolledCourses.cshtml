@model IEnumerable<Course_station.Models.Course>
@{
    ViewData["Title"] = "Enrolled Courses";
}

<h1 class="text-center">Enrolled Courses</h1>

<div class="enrolled-courses-container card shadow-sm p-4 mb-5 bg-white rounded">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <hr />
                        <h6 class="card-subtitle mb-2 text-muted">Course ID: @course.CourseId</h6>
                        <p class="card-text"><strong>Description:</strong>@course.Description</p>
                        <p class="card-text"><strong>Difficulty Level:</strong> @course.DiffLevel</p>
                        <p class="card-text"><strong>Credit Points:</strong> @course.CreditPoint</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .enrolled-courses-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    .card-title{
        color:cornflowerblue;
    }
</style>
