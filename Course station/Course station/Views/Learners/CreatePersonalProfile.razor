@page "/personalprofile/create/{learnerId:int}"
@inject NavigationManager Navigation
@inject HttpClient Http
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components
@using Course_station.Models

<h3>Create Personal Profile</h3>

<EditForm Model="@personalProfile" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="PreferedContentType">Preferred Content Type</label>
        <InputText id="PreferedContentType" class="form-control" @bind-Value="personalProfile.PreferedContentType" />
    </div>
    <div class="form-group">
        <label for="EmotionalState">Emotional State</label>
        <InputText id="EmotionalState" class="form-control" @bind-Value="personalProfile.EmotionalState" />
    </div>
    <div class="form-group">
        <label for="PersonalityType">Personality Type</label>
        <InputText id="PersonalityType" class="form-control" @bind-Value="personalProfile.PersonalityType" />
    </div>
    <input type="hidden" @bind="personalProfile.LearnerId" />

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>

@code {
    [Parameter]
    public int LearnerId { get; set; }

    private PersonalProfile personalProfile = new PersonalProfile();

    protected override void OnInitialized()
    {
        personalProfile.LearnerId = LearnerId;
    }

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/personalprofile", personalProfile);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/personalprofile");
        }
        else
        {
            // Handle error
        }
    }
}
