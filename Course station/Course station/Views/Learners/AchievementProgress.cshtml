@model IEnumerable<Course_station.Models.Achievement>

@{
    ViewData["Title"] = "Achievement Progress";
}

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/achievement-progress.css" />

<h1 class="page-title">Achievement Progress</h1>

<div class="achievement-container">
    @foreach (var achievement in Model)
    {
        <div class="achievement-card">
            <div class="badge-icon">
                <!-- Use a trophy icon to represent the achievement -->
                <i class="bi bi-trophy-fill"></i>
            </div>
            <div class="achievement-details">
                <h2>@achievement.Badge?.Title</h2>
                <p>@achievement.Description</p>
                <span class="date-earned">@achievement.DateEarned.ToString("MMMM dd, yyyy")</span>
            </div>
        </div>
    }
</div>
