@model Course_station.Models.CoursePrerequisite
@{
    ViewData["Title"] = "Delete Course Prerequisite";
}

<h1 class="text-center">Delete Course Prerequisite</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Course Title: @Model.Course.Title</h4>
        <p class="card-text">Prerequisite: @Model.Prerequisite</p>
    </div>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="Prerequisite" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
