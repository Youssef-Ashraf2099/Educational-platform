@model Course_station.Models.CoursePrerequisite
@{
    ViewData["Title"] = "Course Prerequisite Details";
}

<h1 class="text-center">Course Prerequisite Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Course Title: @Model.Course.Title</h4>
        <p class="card-text">Prerequisite: @Model.Prerequisite</p>
    </div>
</div>

<a asp-action="Edit" asp-route-courseId="@Model.CourseId" asp-route-prerequisite="@Model.Prerequisite" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
