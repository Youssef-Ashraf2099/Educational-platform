<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Course-station</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Course_station.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    
</head>
<body class="@(ViewData["IsDarkTheme"] != null && (bool)ViewData["IsDarkTheme"] ? "dark-theme" : "")">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                         
                        <li class="nav-item">
                              <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>  
                             @* <a class=a class="nav-link text-dark" asp-area="" href="#Aboutus">Home</a>  *@
                            @* <a class="nav-link text-dark" asp-area="" asp-fragment="Aboutus">Home</a> *@
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="Aboutus">Home</a> *@
                            @* <a class="nav-link text-dark" href="/Home/Index#Aboutus">Home</a> *@

                        </li>
                        <li class="nav-item">
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a> *@
                            <a class="nav-link text-dark" href="/Home/Index#Aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FeaturedCourse">Course</a> *@
                            <a class="nav-link text-dark" href="/Home/Index#Course">Course</a>
                        </li>
                        <li class="nav-item">
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a> *@
                            <a class="nav-link text-dark" href="/Home/Index#Contact"> Contact Us </a>
                        </li>
                        <li class="nav-item">
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Plans</a> *@
                            <a class="nav-link text-dark" href="/Home/Index#Servicies"> Servicies </a>
                        </li>
                        <li class="nav-item">
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Bloge</a> *@
                            <a class="nav-link text-dark" href="/Home/Index#Planes"> Planes </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                         @if (User?.Identity?.IsAuthenticated == true) 
                         { 
                             <li class="nav-item"> 
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Login</a> 
                             </li> 
                         }
                        else 
                         { 
                            <li class="nav-item"> 
                               <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Logout</a> 
                           </li> 
                        } 
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Course_station - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
