@model Course_station.Models.Achievement

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Achievement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAchievement" asp-controller="Instructor">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEarned" class="control-label"></label>
                <input asp-for="DateEarned" class="form-control" type="date" />
                <span asp-validation-for="DateEarned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeId" class="control-label"></label>
                <input asp-for="BadgeId" class="form-control" />
                <span asp-validation-for="BadgeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearnerId" class="control-label"></label>
                <input asp-for="LearnerId" class="form-control" />
                <span asp-validation-for="LearnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Instructor" asp-action="Home">Back to Home</a>
</div>
