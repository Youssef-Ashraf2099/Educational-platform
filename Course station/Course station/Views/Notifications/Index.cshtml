@model IEnumerable<Course_station.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<h1>Notifications</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().TimeStamp)</th>
            <th>@Html.DisplayNameFor(model => model.First().Message)</th>
            <th>@Html.DisplayNameFor(model => model.First().Urgency)</th>
            <th>@Html.DisplayNameFor(model => model.First().Readstatus)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => notification.TimeStamp)</td>
                <td>@Html.DisplayFor(modelItem => notification.Message)</td>
                <td>@Html.DisplayFor(modelItem => notification.Urgency)</td>
                <td>@Html.DisplayFor(modelItem => notification.Readstatus)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@notification.NotificationId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@notification.NotificationId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@notification.NotificationId">Delete</a> |
                    <a asp-action="MarkAsRead" asp-route-id="@notification.NotificationId">Mark as Read</a>
                </td>
            </tr>
        }
    </tbody>
</table>
